{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "ES2020",
    "module": "commonjs",
    "declaration": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "__tests__"
  ]
}
